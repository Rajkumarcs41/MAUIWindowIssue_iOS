<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.SecondPage">
    <ContentPage.Content>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">
            

            <Button 
                x:Name="CounterBtn"
                Text="I am Second page"
                SemanticProperties.Hint="I am Second page"
                Clicked="CounterBtn_OnClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>